<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/add-product.css">
<link rel="stylesheet" href="/css/forms.css">
</head>
<body>
<%- include('../includes/navbar.ejs') %>
<main>
    <div style="padding: 1rem; text-align: center;">
        <h1>Welcome to Dukani Shop wow <%= isAuthenticated ? "Hello" : "Anonymous" %></h1>
        <p>Explore our Products</p>
    </div>
    <% if (products.length > 0) { %>
        <div class="grid">

            <% for (let product of products) { %>

                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= product?.title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= product?.image %>" alt="">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">Ksh. <%= product?.price %></h2>
                        <p class="product__description"><%= product?.description %></p>
                    </div>
                </article>

            <% } %>
        </div>
        <section class="pagination" style="margin:1rem 0 2rem 0;">
            <% if (currentPage !== 1 && previousPage !== 1) { %>
                <a href="/?page=1">1</a>
            <% } %>
            <% if(hasPreviousPage){ %>
                <a href="/?page=<%= previousPage %>"><%= previousPage %></a>
            <% } %>
            <a href="/?page=<%= currentPage %>" class="active"><%= currentPage %></a>

            <% if (hasNextPage){ %>
                <a href="/?page=<%= nextPage %>"><%= nextPage %></a>
            <% } %>
            <% if (currentPage !== lastPage && nextPage !== lastPage) { %>
                <a href="/?page=<%= lastPage %>"><%= lastPage %></a>
            <% } %>
            <!--            <a href="/?page=2">2</a>-->
        </section>
    <% } else { %>
        <h1>No Products found!</h1>
    <% } %>
</main>
<%- include('../includes/end.ejs') %>