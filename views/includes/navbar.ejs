<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a href="/" class="<%= path === '/' ? 'active' : '' %>">Shop</a>
            </li>
            <li class="main-header__item">
                <a href="/products" class="<%= path === '/products' ? 'active' : '' %>">Products</a>
            </li>
            <% if(isAuthenticated){ %>
                <li class="main-header__item">
                    <a href="/cart" class="<%= path === '/cart' ? 'active' : '' %>">Cart</a>
                </li>
                <li class="main-header__item">
                    <a href="/orders" class="<%= path === '/orders' ? 'active' : '' %>">Orders</a>
                </li>

                <li class="main-header__item">
                    <a href="/add-product" class="<%= path === '/add-product' ? 'active' : '' %>">Add Product</a>
                </li>
                <li class="main-header__item">
                    <a href="/admin-products" class="<%= path === '/admin-products' ? 'active' : '' %>">Admin
                        Products</a>
                </li>
            <% } %>
        </ul>
        <ul class="main-header__item-list">
            <% if (!isAuthenticated){ %>
                <li class="main-header__item">
                    <a href="/auth/login" class="<%= path === '/auth/login' ? 'active' : '' %>">Login</a>
                </li>
                <li class="main-header__item">
                    <a href="/auth/register" class="<%= path === '/auth/register' ? 'active' : '' %>">Signup</a>
                </li>
            <% }else{ %>
                <li class="main-header__item">
                    <form action="/auth/logout" method="post">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>


<nav class="mobile-nav">
    <ul class="mobile-nav__item-list">
        <li class="mobile-nav__item">
            <a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a>
        </li>
        <li class="mobile-nav__item">
            <a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a>
        </li>
        <% if (isAuthenticated) { %>
            <li class="mobile-nav__item">
                <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/add-product' ? 'active' : '' %>" href="/add-product">Add Product
                </a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/admin-products' ? 'active' : '' %>" href="/admin-products">Admin Products
                </a>
            </li>
        <% } %>
        <% if (!isAuthenticated) { %>
            <li class="mobile-nav__item">
                <a class="<%= path === '/auth/login' ? 'active' : '' %>" href="/auth/login">Login</a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/auth/register' ? 'active' : '' %>" href="/auth/register">Signup</a>
            </li>
        <% } else { %>
            <li class="mobile-nav__item">
                <form action="/auth/logout" method="post">
                    <button type="submit">Logout</button>
                </form>
            </li>
        <% } %>
    </ul>
</nav>