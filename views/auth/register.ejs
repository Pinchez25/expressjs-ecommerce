<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
<%- include('../includes/navbar.ejs') %>

<main>
    <form class="login-form" action="/auth/register" method="POST" novalidate>
        <% if (errorMessage){ %>
            <% if (Array.isArray(errorMessage)) { %>
                <ul class="message error-message">
                    <% errorMessage.forEach(function(message){ %>
                        <li><%= message.msg %></li><br>
                    <% }) %>
                </ul>
            <% }else{ %>
                <div class="message error-message">
                    <p><%= errorMessage %></p>
                </div>
            <% } %>
        <% } %>
        <div class="form-control">
            <label for="username">Username</label>
            <input
                    class="<%= errorMessage.find(e=>e.path === 'username')?'invalid':'' %>"
                    type="text" name="username" id="username" value="<%= oldInput.username %>">
        </div>
        <div class="form-control">
            <label for="email">E-Mail</label>
            <input
                    class="<%= errorMessage.find(e=>e.path === 'email')?'invalid':'' %>"
                    type="email" name="email" id="email" value="<%= oldInput.email %>">
        </div>
        <div class="form-control">
            <label for="password">Password</label>
            <input
                    class="<%= errorMessage.find(e=>e.path === 'password')?'invalid':'' %>"
                    type="password" name="password" id="password" value="<%= oldInput.password %>">
        </div>
        <div class="form-control">
            <label for="confirmPassword">Confirm Password</label>
            <input
                    class="<%= errorMessage.find(e=>e.path === 'confirmPassword')?'invalid':'' %>"
                    type="password" name="confirmPassword" id="confirmPassword" value="<%= oldInput.confirmPassword %>">
        </div>
        <div class="centered">
            <button class="btn" type="submit">Register</button>
        </div>
    </form>
    <div class="centered">
        <p>Already have an account? <a href="/auth/login">Sign in</a></p>
    </div>
</main>
<%- include('../includes/end.ejs') %>